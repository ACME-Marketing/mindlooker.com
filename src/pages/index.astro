---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/core/Hero.astro';
import FeatureCard from '../components/cards/FeatureCard.astro';
import TestimonialCard from '../components/cards/TestimonialCard.astro';
---

<BaseLayout title="MindLooker - A New Perspective">
  <Hero />

  <!-- Features Section -->
  <section class="container mx-auto px-6 py-20 text-center">
    <h2 class="text-4xl font-extrabold text-brand-text mb-12">
      A Fundamentally Different Approach
    </h2>
    <div class="grid md:grid-cols-3 gap-8">
      <FeatureCard
        title="No Practitioner Altitude"
        description="We are not the expert on you; you are. Our process creates a neutral space where your own wisdom can emerge, free from external judgment or direction."
      />
      <FeatureCard
        title="Results in Hours, Not Years"
        description="By avoiding endless analysis and focusing directly on the source of unwanted patterns, you can experience significant shifts in a fraction of the time of traditional talk therapy."
      />
      <FeatureCard
        title="Your Truth is the Truth"
        description="Everything you say is accepted as true for you in that moment. There is no need to justify or defend your experience, allowing for radical honesty and deep exploration."
      />
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="bg-brand-background py-20">
    <div class="container mx-auto px-6">
      <h2 class="text-4xl font-extrabold text-brand-text text-center mb-12">
        What Our Clients Are Saying
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        <TestimonialCard
          quote="After years of talk therapy, I finally conquered my fear of public speaking in just a couple of hours. Wow!"
          author="John S."
          role="Executive"
        />
        <TestimonialCard
          quote="I had so many workarounds and coping skills it was exhausting. So glad I found MindLooker."
          author="Sarah L."
          role="Entrepreneur"
        />
        <TestimonialCard
          quote="Anxiety no longer rules my life. I feel like I've gotten to the root of it for the first time."
          author="Mike P."
          role="Creative Professional"
        />
      </div>
    </div>
  </section>

</BaseLayout>