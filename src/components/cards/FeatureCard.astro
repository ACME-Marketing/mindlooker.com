---
// A reusable card for highlighting features or key differentiators.
const {
  title = "Feature Title",
  description = "A brief description of the feature goes here, explaining its value and benefit to the user."
} = Astro.props;
---

<div class="bg-brand-primary bg-opacity-10 p-8 rounded-lg shadow-lg text-left h-full">
  <h3 class="text-2xl font-bold text-brand-secondary mb-3">
    {title}
  </h3>
  <p class="text-gray-600 leading-relaxed">
    {description}
  </p>
</div>