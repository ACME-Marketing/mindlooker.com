---
// A simple, responsive header component
---

<header class="bg-brand-background shadow-md">
  <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
    <a href="/" class="text-2xl font-bold">
      <span class="text-brand-primary">Mind</span><span class="text-brand-accent">Looker</span>
    </a>
    <div class="hidden md:flex space-x-6 items-center">
      <a href="/about" class="hover:text-brand-primary">About</a>
      <a href="/sessions" class="hover:text-brand-primary">Sessions</a>
      <a href="/blog" class="hover:text-brand-primary">Blog</a>
      <a href="/training" class="hover:text-brand-primary">Practitioner Training</a>
      <button
          data-cal-link="takealook/mindlooker-free-session"
          data-cal-namespace="30min"
          data-cal-config='{"layout":"month_view"}'
          class="bg-brand-accent text-white px-4 py-2 rounded-button hover:opacity-90">
        Book Free Session
      </button>
    </div>
    <div class="md:hidden">
      <!-- Mobile menu button will go here -->
      <button class="text-brand-text">Menu</button>
    </div>
  </nav>
</header>